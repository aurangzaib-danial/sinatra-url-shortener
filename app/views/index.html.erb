<section id="main">
	<% if flash[:shortened_url] %>
		<p id="shortened_url">
			<a href="<%= flash[:shortened_url]%>" target="_blank" class="short_link"><%= flash[:shortened_url] %></a>
			<button class="copy_link">Copy</button>
		</p>
	<% elsif flash[:error] %>
		<p id="error">
			<%= flash[:error] %>
		</p>
	<% end %>
	<form action="/urls" method="post">
		<input type="text" name="target_url" id="target_url" placeholder="Paste long link" required>
		<button type="submit">Shorten</button>
	</form>

</section>

<section id="history">
	<h3>History <%= '<small><a href="/login">(Login to save your links)</a></small>' unless logged_in? %>
	</h3>
	
	<ul>
		<% history_urls.each do |url| %>
			<li>
			<span>Title: <a href="/urls/<%= url.id %>"><%= url.title? ? url.title : 'Add a title' %></a></span><br>
			Short Link: <a href="<%= url.shorten(host) %>" target="_blank" class="short_link"><%= url.shorten(host) %></a>
			<button class="copy_link">Copy</button>
			</li>
		<% end %>
	</ul>
</section>